                align-items: center;
                padding: 48px;
            }

            .auth-container .auth-content .auth-body.hidden {
                display: none;
            }

            .auth-container .auth-content .auth-body h2 {
                font-weight: 400;
            }

            .auth-container .auth-content .auth-body h4 {
                font-weight: normal;
                margin: 0;
            }

